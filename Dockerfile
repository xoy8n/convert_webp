# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# Use Node.js slim base for compatibility with sharp prebuilt binaries
FROM node:lts-slim AS builder

WORKDIR /app

# Install build tools for TypeScript and sharp if needed
RUN apt-get update \
    && apt-get install -y --no-install-recommends python3 build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy package manifest and TypeScript config
COPY package.json package-lock.json tsconfig.json ./

# Install dependencies including dev for build
RUN npm ci

# Copy source code
COPY . .

# Build the project
RUN npm run build

# Production image
FROM node:lts-slim AS runtime
WORKDIR /app

# Install runtime dependencies only
COPY package.json package-lock.json ./
RUN apt-get update \
    && apt-get install -y --no-install-recommends python3 \
    && rm -rf /var/lib/apt/lists/*
RUN npm ci --only=production

# Copy built files
COPY --from=builder /app/dist ./dist

# Set entrypoint for MCP server over stdio
CMD ["node", "dist/index.js"]
