# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# Dockerfile.smithery: Multi-stage build for WebP Convert MCP Server

# Builder stage: install dependencies and build TypeScript
FROM node:lts-alpine AS builder
WORKDIR /app

# Copy project files
COPY package.json package-lock.json tsconfig.json ./
COPY src ./src

# Install all dependencies (including dev) and build
RUN npm install && npm run build

# Runtime stage: install production dependencies only without running scripts
FROM node:lts-alpine AS runner
WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install production dependencies and ignore lifecycle scripts (prepare/build)
RUN npm install --omit=dev --ignore-scripts

# Copy built artifacts
COPY --from=builder /app/dist ./dist

# Default command: start MCP server on stdio
CMD ["node", "dist/index.js"]
